<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        button {
            float: right;
        }

        .container {
            padding: 18%;
        }

        fieldset{
            border: 1px ;
        }
    </style>
</head>

<body>

    <div class="container">
        <fieldset>
            <legend>Log IN</legend>
            <form id="loginform" method="POST" action="/api/login" class="form">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input required name="username" type="text" class="form-control" id="username" aria-describedby="emailHelp"
                        placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input required name="password" type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <button name="login" type="submit" class="btn btn-primary">Log In</button>
                    <button name="signup" style="margin-right: 3%;" type="submit" class="btn btn-secondary">Sign Up</button>
                </div>
            </form>

        </fieldset>

    </div>

    <script>
        const urlSearchParams = new URLSearchParams(window.location.search);
        const params = Object.fromEntries(urlSearchParams.entries());

        let failLogin = params.failed;
        let registration = params.registration;
        let alreadyExists = params.alreadyexists;

        if (failLogin == "true")
            alert("Wrong Username or Password.")

        if(registration == "true")
            alert("Registration is successfull.");

        if(alreadyExists == "true")
            alert("User already exists.");

    </script>


</body>

</html>